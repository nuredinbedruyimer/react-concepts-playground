{
  "compilerOptions": {
    "module": "NodeNext",
    "outDir": "./dist", // This ensures the compiled JS files go into the dist folder
    "esModuleInterop": true, // For CommonJS module compatibility
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "nodenext",

    "strict": true,
    "rootDir": "./src/",
    "baseUrl": "src",
    "paths": {
      "@helpers": ["./src/helpers/*"],
      "@utils": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
